<?xml version="1.0" encoding="utf-8"?>
<manifest package="tvao.mmad.itu.tingle"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Dialogue shown to user about below permissions when downloading app-->
    <!-- Camera is used to register bar code-->
    <!-- Internet and access is used for network operations -->
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Controller.Activities.TingleActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Controller.Activities.ThingPagerActivity"
            android:label="@string/app_name"
            android:parentActivityName=".Controller.Activities.ThingListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Controller.Activities.ThingListActivity"/>
        </activity>
        <activity android:name=".Controller.Activities.ThingListActivity">
            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.MAIN" />-->
                <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->
        </activity>
        <activity
            android:name=".Controller.Activities.BarcodeActivity">
        </activity>
    </application>

</manifest>
